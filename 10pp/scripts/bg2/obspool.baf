IF
  Clicked([ANYONE])
  Range(LastTrigger,15)
  Global("ObsPool","AR0411",0)
  OpenState("DoorPool1",TRUE)  // DoorPool1
THEN
  RESPONSE #100
    DisplayString(Myself,2172)  // ~This pool shows a bird's eye view of Athkatla. The planar sphere stands out like a magic beacon in the heart of the city.~
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,15)
  Global("ObsPool","AR0411",0)
  OpenState("DoorPool1",FALSE)  // DoorPool1
THEN
  RESPONSE #100
    DisplayString(Myself,61353)  // ~Within the ripples of the magical pool you see a distorted, demonic valley.  A place such as this could only be home to the most foul of beasts.~
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,15)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

