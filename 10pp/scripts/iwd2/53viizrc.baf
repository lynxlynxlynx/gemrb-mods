  Or(2)
    HasItem("SLiving",Myself)  // ~Slay Living~
    HasItem("CSDamag",Myself)  // ~Inflict Serious Wounds~
  Or(2)
    Range(LastSeenBy(Myself),6,LESS_THAN)
    Global("SPELL_LIST_1_INDEX","LOCALS",-1)
  Or(2)
    See(NearestEnemyOf(Myself),0)
    See([0.0.DRIDER],0)
THEN
