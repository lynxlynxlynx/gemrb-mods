  SetSpellTarget(Nothing)
  !Global("OBJ_SP_53VIIZRC_0","LOCALS",-1)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("141413131215",Myself,7)
      // CLERIC_RECITATION
      // CLERIC_PRAYER
      // CLERIC_DRAW_UPON_HOLY_MIGHT
