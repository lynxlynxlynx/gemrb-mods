IF
  True()
THEN
  RESPONSE #100
    CutSceneId("Hiepherus")  // 
    MoveViewPoint([864.1450],15)
    SpellCastEffect(Myself,"","","",GLOW_NECROMANCY,1,ATTACK)
    Wait(2)
    FloatMessage(Myself,37846)  // ~"When I see you again, I will have your corpses carry the banner of the Chimera as they march on the Ten-Towns."~
    Wait(9)
    SpellCastEffect(Myself,"","","",GLOW_NECROMANCY,1,ATTACK)
    SpellHitEffectSprite(Myself,Myself,NECROMANCY,0)
    HideCreature(Myself,TRUE)
    EndCutSceneMode()
    DestroySelf()
END

