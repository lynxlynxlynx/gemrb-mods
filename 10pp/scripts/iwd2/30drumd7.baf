IF
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    SetGlobal("DRUM_7_CHECK_SUMMON","MYAREA",0)
    SetGlobal("AR3002_DRUM_SUMMON","GLOBAL",0)
    ChangeCurrentScript("")
END

IF
  OpenState(Myself,FALSE)
  Dead("DRUM_7")  // 
THEN
  RESPONSE #100
    SetGlobal("DRUM_7_CHECK_SUMMON","MYAREA",0)
    SetGlobal("AR3002_DRUM_SUMMON","GLOBAL",0)
    OpenDoor(Myself)
END

