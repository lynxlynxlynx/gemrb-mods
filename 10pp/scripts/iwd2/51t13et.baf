IF
  !Global("TEAM_13","MYAREA",1)
  Or(2)
    AttackedBy([GOODCUTOFF],0)
    PickPocketFailed([PC])
THEN
  RESPONSE #100
    SetGlobal("TEAM_13","MYAREA",1)
    Continue()
END

IF
  !Allegiance(Myself,ENEMY)
  Or(3)
    !Global("TEAM_11","MYAREA",0)
    !Global("TEAM_13","MYAREA",0)
    !Global("TEAM_14","MYAREA",0)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

IF
  !IsTeamBitOn(TEAM_13_BIT)
THEN
  RESPONSE #100
    SetTeamBit(TEAM_13_BIT,TRUE)
    Continue()
END

IF
  !Global("TEAM_13","MYAREA",1)
  Allegiance(Myself,ENEMY)
  !CreatureHidden(Myself)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("TEAM_13","MYAREA",1)
    Continue()
END

