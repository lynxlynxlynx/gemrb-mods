IF
  Global("OncePerDaySummoning","LOCALS",0)
  !Global("00CRNE_Mark","LOCALS",0)
  HPPercentLT(Myself,35)
THEN
  RESPONSE #100
    SetGlobal("OncePerDaySummoning","LOCALS",1)
    ForceSpell(MyTarget,INNATE_SUMMONED_CORNUGON_SUMMONING)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    Continue()
END

IF
  GlobalLT("Action","LOCALS",2)
  Range(MyTarget,2,GREATER_THAN)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SpellHitEffectSprite(Myself,Myself,DIMENSION_DOOR_ORIGIN,0)
    HideCreature(Myself,TRUE)
    FloatMessage(Myself,38707)  // ~.:Casts Teleport Without Error:.~
    JumpToObject(MyTarget)
    FaceObject(MyTarget)
    SpellHitEffectSprite(Myself,Myself,DIMENSION_DOOR_DESTINATION,0)
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  See(NearestEnemyOf(Myself),0)
  GlobalLT("Action","LOCALS",2)
THEN
  RESPONSE #100
    IncrementGlobal("Action","LOCALS",1)
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  HasItem("MMMeteo",Myself)  // ~Melf's Minute Meteors~
  See(NearestEnemyOf(Myself),0)
  Global("Action","LOCALS",2)
THEN
  RESPONSE #100
    SetGlobal("Action","LOCALS",0)
    AttackOneRound(LastMarkedObject)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  See(NearestEnemyOf(Myself),0)
  Global("Action","LOCALS",2)
THEN
  RESPONSE #100
    MarkSpellAndObject("2501210423082304",LastMarkedObject,7)
      // WIZARD_ANIMATE_DEAD
      // WIZARD_CHARM_PERSON
      // WIZARD_LIGHTNING_BOLT
      // WIZARD_FIREBALL
    MarkSpellAndObject("2322",Myself,7)
      // WIZARD_MELFS_MINUTE_METEORS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2322",Myself,7)
      // WIZARD_MELFS_MINUTE_METEORS
    MarkSpellAndObject("2501210423082304",LastMarkedObject,7)
      // WIZARD_ANIMATE_DEAD
      // WIZARD_CHARM_PERSON
      // WIZARD_LIGHTNING_BOLT
      // WIZARD_FIREBALL
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    SetGlobal("Action","LOCALS",0)
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

