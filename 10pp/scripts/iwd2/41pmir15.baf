IF
  GlobalTimerNotExpired("PrismFireDelay","MYAREA")
THEN
  RESPONSE #100
    NoAction()
END

IF
  Global("41PrismFire","MYAREA",3)
THEN
  RESPONSE #100
    ForceSpellPoint([800.2400],2092)
    SetGlobalTimer("PrismFireDelay","MYAREA",1)
    TriggerActivation("Mirror14",TRUE)
    TriggerActivation(Myself,FALSE)
END

