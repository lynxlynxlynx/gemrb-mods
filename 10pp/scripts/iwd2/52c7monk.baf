IF
  !HasItemInSlot("00CIMHP1",Myself,SLOT_RING_RIGHT)
THEN
  RESPONSE #100
    XEquipItem("00CIMHP1",Myself,SLOT_RING_RIGHT,TRUE)
END

IF
  Global("PLAYING_DEAD","LOCALS",0)
  HPLT(Myself,5)
  IsHeartOfFuryModeOn()
  !Dead(Myself)  // 
THEN
  RESPONSE #100
    SetGlobal("PLAYING_DEAD","LOCALS",1)
    PlayDead(270)
    Continue()
END

