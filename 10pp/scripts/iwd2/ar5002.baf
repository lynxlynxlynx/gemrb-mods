IF
  Global("AGOG_OUTSIDE","GLOBAL",1)
  Exists("01_50Agog_02")  // 01_50Agog_02
THEN
  RESPONSE #100
    ActionOverride("01_50Agog_02",DestroySelf())
    SetGlobal("AGOG_OUTSIDE","GLOBAL",2)
    Continue()
END

IF
  GlobalGT("LIHMA_OUTSIDE","GLOBAL",1)
  Exists("02_50Hannu_01")  // 02_50Hannu_01
THEN
  RESPONSE #100
    ActionOverride("02_50Hannu_01",DestroySelf())
    Continue()
END

IF
  AreaRestDisabled()
  !Global("Limha_Dead","GLOBAL",0)
  !Global("50Agog_Dead","GLOBAL",0)
THEN
  RESPONSE #100
    AllowAreaResting(TRUE)
    Continue()
END

IF
  Global("TEAM_1","MYAREA",0)
  Or(2)
    Dead("01_50Agog_02")  // 
    Dead("01_50Limha_01")  // 
THEN
  RESPONSE #100
    SetGlobal("TEAM_1","MYAREA",1)
    Continue()
END

IF
  IsActive("ghostley_whispers")  // ghostley_whispers
  Dead("05_50Limha2_01")  // 
THEN
  RESPONSE #100
    Deactivate("ghostley_whispers")
    Continue()
END

IF
  Global("50Barbarians_Leave","GLOBAL",1)
  EntirePartyOnMap()
THEN
  RESPONSE #100
    SetGlobal("50Barbarians_Leave","GLOBAL",2)
    Continue()
END

IF
  OnCreation()
THEN
  RESPONSE #100
    NoAction()
    Continue()
END

