IF
  Global("ENRAGED","LOCALS",0)
  IsSpellTargetValid(Myself,WIZARD_FIRESHIELD_RED,0)
  !Global("Bashshar_Sorcerer_Dead","GLOBAL",0)
THEN
  RESPONSE #100
    ForceSpell(Myself,WIZARD_FIRESHIELD_RED)
    SetGlobal("ENRAGED","LOCALS",1)
    SpellWait(WIZARD_FIRESHIELD_RED)
END

IF
  HaveSpell(WIZARD_FIRESHIELD_RED)
  IsSpellTargetValid(Myself,WIZARD_FIRESHIELD_RED,0)
THEN
  RESPONSE #100
    Spell(Myself,WIZARD_FIRESHIELD_RED)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Global("SPELL_SET","LOCALS",0)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("210221142223",Myself,7)
      // WIZARD_ARMOR
      // WIZARD_SHIELD
      // WIZARD_CATS_GRACE
    MarkSpellAndObject("2627",LastMarkedObject,7)
      // WIZARD_CONJURE_FIRE_ELEMENTAL
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2627",LastMarkedObject,7)
      // WIZARD_CONJURE_FIRE_ELEMENTAL
    MarkSpellAndObject("210221142223",Myself,7)
      // WIZARD_ARMOR
      // WIZARD_SHIELD
      // WIZARD_CATS_GRACE
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    SetGlobal("SPELL_SET","LOCALS",1)
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  HasItem("MMMeteo",Myself)  // ~Melf's Minute Meteors~
  !Global("SPELL_SET","LOCALS",0)
  Or(3)
    See(MostDamagedOf(GroupOf(Player1)),0)
    See(WeakestOf(GroupOf(Player1)),0)
    See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("SPELL_SET","LOCALS",0)
    AttackOneRound(LastMarkedObject)
END

