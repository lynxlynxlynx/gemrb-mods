      // WIZARD_FLAME_ARROW
    MarkSpellAndObject("2322",Myself,7)
      // WIZARD_MELFS_MINUTE_METEORS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2322",Myself,7)
      // WIZARD_MELFS_MINUTE_METEORS
    MarkSpellAndObject("241725112303",LastMarkedObject,7)
      // WIZARD_BELTYNS_BURNING_BLOOD
      // WIZARD_SHROUD_OF_FLAME
      // WIZARD_FLAME_ARROW
    Continue()
END

