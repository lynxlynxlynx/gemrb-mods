  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Global("Zilvar_Needs_Help","MYAREA",1)
  CheckAreaDiffLevel(3)
  SetLastMarkedObject(Myself)
THEN
  RESPONSE #100
    MarkSpellAndObject("2402","Zilvar",0)
      // WIZARD_DIMENSION_DOOR
    MarkSpellAndObject("211824112112",LastMarkedObject,3)
      // WIZARD_CHROMATIC_ORB
      // WIZARD_EMOTION_HOPELESSNESS
      // WIZARD_MAGIC_MISSILE
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

