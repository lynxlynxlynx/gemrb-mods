IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

IF
  StateCheck(Myself,STATE_SILENCED)
THEN
  RESPONSE #100
    Spell(Myself,WIZARD_VOCALIZE)
    Wait(2)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Global("Zilvar_Needs_Help","MYAREA",1)
  CheckAreaDiffLevel(1)
  SetLastMarkedObject(Myself)
THEN
  RESPONSE #100
    MarkSpellAndObject("2402","Zilvar",0)
      // WIZARD_DIMENSION_DOOR
    MarkSpellAndObject("2411",LastMarkedObject,3)
      // WIZARD_EMOTION_HOPELESSNESS
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    SetGlobal("Zilvar_Needs_Help","MYAREA",0)
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Global("Zilvar_Needs_Help","MYAREA",1)
  CheckAreaDiffLevel(2)
  SetLastMarkedObject(Myself)
THEN
  RESPONSE #100
    MarkSpellAndObject("2402","Zilvar",0)
      // WIZARD_DIMENSION_DOOR
    MarkSpellAndObject("21182112",LastMarkedObject,3)
      // WIZARD_CHROMATIC_ORB
      // WIZARD_MAGIC_MISSILE
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

