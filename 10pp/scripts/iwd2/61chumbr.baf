IF
  !HasItemInSlot("00Troll1",Myself,SLOT_RING_LEFT)
THEN
  RESPONSE #100
    XEquipItem("00Troll1",Myself,SLOT_RING_LEFT,TRUE)
    Continue()
END

IF
  !CreatureHidden(Myself)
  HitBy([ANYONE],FIRE)
THEN
  RESPONSE #100
    XEquipItem("00Troll1",Myself,SLOT_RING_LEFT,FALSE)
    Continue()
END

IF
  !CreatureHidden(Myself)
  HPLT(Myself,3)
  !Sequence(Myself,SLEEP)
THEN
  RESPONSE #100
    SetGlobal("Target","LOCALS",0)
    SetGlobal("Stalk","LOCALS",0)
    PlaySequence(Myself,SLEEP)
END

IF
  Sequence(Myself,SLEEP)
  HPPercent(Myself,100)
THEN
  RESPONSE #100
    PlaySequence(Myself,AWAKE)
END

IF
  Or(2)
    CreatureHidden(Myself)
    Sequence(Myself,SLEEP)
THEN
  RESPONSE #100
    NoAction()
END

IF
  Global("Stalk","LOCALS",0)
  Or(15)
    Heard([ANYONE],100)
    Heard([ANYONE],101)
    Heard([ANYONE],102)
    Heard([ANYONE],103)
    Heard([ANYONE],104)
    Heard([ANYONE],105)
    Heard([ANYONE],106)
    Heard([ANYONE],107)
    Heard([ANYONE],108)
    Heard([ANYONE],109)
    Heard([ANYONE],110)
    Heard([ANYONE],111)
    Heard([ANYONE],112)
    Heard([ANYONE],113)
    Heard([ANYONE],114)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",1)
END

IF
  Global("Stalk","LOCALS",0)
  HitBy([ANYONE],CRUSHING)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",2)
END

IF
  Global("Stalk","LOCALS",1)
  See(LastHeardBy(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",3)
END

IF
  Global("Stalk","LOCALS",1)
  !See(LastHeardBy(Myself),0)
THEN
  RESPONSE #100
    MoveToObject(LastHeardBy(Myself))
END

IF
  Global("Stalk","LOCALS",2)
  See(LastHitter(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",3)
END

IF
  Global("Stalk","LOCALS",2)
  !See(LastHitter(Myself),0)
THEN
  RESPONSE #100
    MoveToObject(LastHitter(Myself))
END

IF
  Global("Stalk","LOCALS",3)
  See([GOODCUTOFF],0)
  Range(LastMarkedObject,5,LESS_THAN)
THEN
  RESPONSE #100
    SetGlobalTimer("SenseTimer","LOCALS",15)
    SetGlobal("Stalk","LOCALS",4)
END

IF
  Global("Stalk","LOCALS",3)
  See([GOODCUTOFF],0)
  Range(LastMarkedObject,4,GREATER_THAN)
THEN
  RESPONSE #100
    MoveToObject(LastMarkedObject)
END

IF
  Global("Stalk","LOCALS",3)
  !See([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",0)
END

IF
  Global("Stalk","LOCALS",4)
  See([GOODCUTOFF],0)
  Range(LastMarkedObject,5,LESS_THAN)
  GlobalTimerExpired("SenseTimer","LOCALS")
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",0)
END

IF
  Global("Stalk","LOCALS",4)
  See([GOODCUTOFF],0)
  Range(LastMarkedObject,4,GREATER_THAN)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",5)
END

IF
  !Sequence(Myself,SLEEP)
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  Global("Stalk","LOCALS",5)
  See([GOODCUTOFF],0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  !TimerActive(22)
  Global("Stalk","LOCALS",0)
THEN
  RESPONSE #100
    RandomWalk()
    StartTimer(22,5)
END

IF
  Global("Stalk","LOCALS",5)
  !See([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("Stalk","LOCALS",0)
END

