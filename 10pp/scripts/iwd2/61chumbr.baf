IF
  Global("Chumbra_dead","GLOBAL",1)
  !Dead(Myself)  // 
THEN
  RESPONSE #100
    DestroySelf()
    ChangeCurrentScript("")
END

IF
  GlobalGT("61VolcanoStatus","GLOBAL",0)
  Global("Chumbra_dead","GLOBAL",0)
THEN
  RESPONSE #100
    Kill(Myself)
    ChangeCurrentScript("")
END

