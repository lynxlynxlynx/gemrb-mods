  !CreatureHidden(Myself)
  HP(Myself,1)
  !CheckStat(Myself,5,RESISTFIRE)
THEN
  RESPONSE #100
    Debug("ChumbraFireResistanceStage(1)")
    ChangeStat(Myself,RESISTFIRE,5,SET)
    ChangeStat(Myself,SAVEREFLEX,1,SET)
    Continue()
END

