IF
  !Allegiance(Myself,ENEMY_OF_EVIL)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,ENEMY_OF_EVIL)
END

IF
  Global("SH_Teleported_To_6303","GLOBAL",2)
  !Global("SH_Ormis_Antidote","GLOBAL",2)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  CreatureHidden(Myself)
  Global("SH_Teleported_To_6303","GLOBAL",2)
  Global("SH_Ormis_Antidote","GLOBAL",2)
THEN
  RESPONSE #100
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    ChangeCurrentScript("")
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

