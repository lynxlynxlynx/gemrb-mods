IF
  Global("60PEDES5_Take_Stele","MYAREA",0)
  PartyHasItem("60Stele5")  // ~Religious Stele~
  OpenState("AR6050_IntPillar5",FALSE)  // AR6050_IntPillar5
THEN
  RESPONSE #100
    SetGlobal("60PEDES5_Take_Stele","MYAREA",1)
    TakePartyItem("60Stele5")
    IncrementGlobal("Chult_Pedestals","GLOBAL",1)
    Unlock(Myself)
    CloseDoor(Myself)
END

IF
  Clicked([PC])
THEN
  RESPONSE #100
END

