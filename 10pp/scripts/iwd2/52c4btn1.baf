IF
  Or(2)
    OpenState(Myself,TRUE)
    !CheckDoorFlags(Myself,DOORLOCKED)
  Or(3)
    Global("WATCHING_PLAYER","MYAREA",0)
    !Global("52Morohem_Master","GLOBAL",4)
    Dead("07_52MNKCL_01")  // 
THEN
  RESPONSE #100
    Unlock(Myself)
    CloseDoor(Myself)
    Lock(Myself)
END

IF
  Or(3)
    Global("WATCHING_PLAYER","MYAREA",0)
    !Global("52Morohem_Master","GLOBAL",4)
    Dead("07_52MNKCL_01")  // 
THEN
  RESPONSE #100
    NoAction()
END

IF
  OpenState(Myself,TRUE)
  HPPercentGT("07_52MNKCL_01",50)  // 07_52MNKCL_01
THEN
  RESPONSE #100
    CloseDoor(Myself)
    Lock(Myself)
END

IF
  Closed([PC])
THEN
  RESPONSE #100
    ClearActions("07_52MNKCL_01")
    SpellHitEffectSprite("07_52MNKCL_01","07_52MNKCL_01",ELECTRICITY,10)
    ActionOverride("07_52MNKCL_01",DestroyItem("00CIMHP1"))  // <Invalid Strref -1>
    ChunkCreature("07_52MNKCL_01")
END

IF
  OpenState(Myself,FALSE)
  HPPercentLT("07_52MNKCL_01",50)  // 07_52MNKCL_01
THEN
  RESPONSE #100
    Unlock(Myself)
    OpenDoor(Myself)
    SpellHitEffectSprite("C4_SWITCH_1_EFF","C4_SWITCH_1_EFF",ELECTRICITY,0)
END

