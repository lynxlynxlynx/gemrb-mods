IF
  GlobalLT("BARB_RAGE","LOCALS",4)
  !TimerActive(11)
  CheckStatGT(Myself,11,CLASSLEVELSUM)
  CheckStatLT(Myself,16,CLASSLEVELSUM)
THEN
  RESPONSE #100
