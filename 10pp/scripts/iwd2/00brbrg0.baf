IF
  GlobalLT("BARB_RAGE","LOCALS",1)
  !TimerActive(11)
  CheckStatLT(Myself,4,CLASSLEVELSUM)
THEN
  RESPONSE #100
    StartTimer(11,43200)
    SetGlobal("BARB_RAGE","LOCALS",1)
    Continue()
END

IF
  GlobalLT("BARB_RAGE","LOCALS",2)
  !TimerActive(11)
  CheckStatGT(Myself,3,CLASSLEVELSUM)
  CheckStatLT(Myself,8,CLASSLEVELSUM)
THEN
  RESPONSE #100
    StartTimer(11,43200)
