IF
  CreatureHidden(Myself)
  Global("LIHMA_OUTSIDE","GLOBAL",2)
THEN
  RESPONSE #100
    FaceObject(NearestEnemyOf(Myself))
    SpellHitEffectSprite(Myself,Myself,MONSTER_SUMMONING_CIRCLE,30)
    Wait(1)
    HideCreature(Myself,FALSE)
END

IF
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    ChangeCurrentScript("")
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

