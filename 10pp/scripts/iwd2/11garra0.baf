IF
  Or(2)
    !CreatureHidden("Doppelganger")  // Doppelganger
    CreatureHidden(Myself)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  Or(2)
    Allegiance(Myself,ENEMY)
    AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    HideCreature("Doppelganger",FALSE)
    HideCreature(Myself,TRUE)
    DestroySelf()
END

