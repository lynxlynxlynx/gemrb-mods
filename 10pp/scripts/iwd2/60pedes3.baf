IF
  Global("60PEDES3_Take_Stele","MYAREA",0)
  PartyHasItem("60Stele3")  // ~Religious Stele~
  OpenState("AR6050_IntPillar3",FALSE)  // AR6050_IntPillar3
THEN
  RESPONSE #100
    SetGlobal("60PEDES3_Take_Stele","MYAREA",1)
    TakePartyItem("60Stele3")
    IncrementGlobal("Chult_Pedestals","GLOBAL",1)
    Unlock(Myself)
    CloseDoor(Myself)
END

IF
  Clicked([PC])
THEN
  RESPONSE #100
END

