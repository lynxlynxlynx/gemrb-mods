IF
  Global("50HGhost","GLOBAL",2)
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    UseItem("11Veira2",Myself)  // <Invalid Strref -1>
    Wait(1)
    DestroySelf()
END

IF
  Global("50HGhost","GLOBAL",2)
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  CreatureHidden(Myself)
  !Global("FW_WILL_O_WISPS_DEAD","GLOBAL",0)
THEN
  RESPONSE #100
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

IF
  !CreatureHidden(Myself)
  See([PC],0)
THEN
  RESPONSE #100
    FaceObject(LastMarkedObject)
END

