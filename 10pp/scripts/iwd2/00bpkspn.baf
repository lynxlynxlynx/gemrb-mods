IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    JumpToObject(Myself)
    Enemy()
    SpellHitEffectSprite(Myself,Myself,CURE_CRITICAL_WOUNDS,25)
    SmallWait(10)
    FaceObject(NearestEnemyOf(Myself))
    HideCreature(Myself,FALSE)
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

