IF
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    SetGlobal("DRUM_3_CHECK_SUMMON","MYAREA",0)
    SetGlobal("AR3000_DRUM_SUMMON","GLOBAL",0)
    ChangeCurrentScript("")
END

IF
  OpenState(Myself,FALSE)
  Dead("DRUM_3")  // 
THEN
  RESPONSE #100
    SetGlobal("DRUM_3_CHECK_SUMMON","MYAREA",0)
    SetGlobal("AR3000_DRUM_SUMMON","GLOBAL",0)
    OpenDoor(Myself)
END

