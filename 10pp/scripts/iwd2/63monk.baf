IF
  !Allegiance(Myself,ENEMY_OF_EVIL)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,ENEMY_OF_EVIL)
END

IF
  !TimerActive(6)
  HPLostGT(Myself,40)
THEN
  RESPONSE #100
    StartTimer(6,43200)
    ForceSpell(Myself,INNATE_MONK_WHOLENESS_OF_BODY)
    SpellWait(INNATE_MONK_WHOLENESS_OF_BODY)
END

IF
  !TimerActive(8)
  IsSpellTargetValid(Myself,INNATE_QUIVERING_PALM,0)
  IsSpellTargetValid(Myself,INNATE_STUNNING_BLOW,0)
THEN
  RESPONSE #33
    StartTimer(8,302400)
    ReallyForceSpell(Myself,INNATE_QUIVERING_PALM)
    Continue()
END

IF
  GlobalLT("STUNNING_BLOWS","LOCALS",16)
  IsSpellTargetValid(Myself,INNATE_STUNNING_BLOW,0)
  IsSpellTargetValid(Myself,INNATE_QUIVERING_PALM,0)
  !StateCheck(MyTarget,STATE_STUNNED)
THEN
  RESPONSE #100
    ReallyForceSpell(Myself,INNATE_STUNNING_BLOW)
    IncrementGlobal("STUNNING_BLOWS","LOCALS",1)
    Continue()
END

IF
  Global("AS","LOCALS",0)
  Range(MyTarget,10,GREATER_THAN)
  !Global("Monk_MyTarget","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("AS","LOCALS",1)
    SpellHitEffectSprite(Myself,Myself,DIMENSION_DOOR_ORIGIN,0)
    HideCreature(Myself,TRUE)
    JumpToObject(MyTarget)
    FaceObject(MyTarget)
    SpellHitEffectSprite(Myself,Myself,DIMENSION_DOOR_DESTINATION,0)
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  !Global("Monk_MyTarget","LOCALS",0)
  See(MyTarget,0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

