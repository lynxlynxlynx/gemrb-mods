IF
  !Global("Monk_MyTarget","LOCALS",0)
  Or(4)
    !HPGT(MyTarget,0)
    StateCheck(MyTarget,STATE_SLEEPING)
    StateCheck(MyTarget,STATE_CHARMED)
    TargetUnreachable(MyTarget)
THEN
  RESPONSE #100
    SetGlobal("Monk_MyTarget","LOCALS",0)
    Continue()
END

IF
  !Allegiance(Myself,ENEMY)
