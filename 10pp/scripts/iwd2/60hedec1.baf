IF
  Global("Marked_Player","LOCALS",0)
  AttackedBy([ANYONE],0)
THEN
  RESPONSE #100
    Enemy()
    EquipWeapon()
    AttackOneRound(LastAttackerOf(Myself))
END

IF
  Global("Marked_Player","LOCALS",0)
  See(LastAttackerOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastAttackerOf(Myself))
END

IF
  Global("Marked_Player","LOCALS",0)
  Allegiance(Myself,ENEMY)
  Or(2)
    !AttackedBy([ANYONE],0)
    !See(LastAttackerOf(Myself),0)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,NEUTRAL)
END

IF
  !Global("Marked_Player","LOCALS",0)
  See(MyTarget,0)
THEN
  RESPONSE #100
    Enemy()
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

