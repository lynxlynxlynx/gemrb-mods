IF
  HPPercentLT(Myself,50)
THEN
  RESPONSE #100
    CreateCreature("53SpiCra","",[-1.-1],0)  // ~Cradoldrider Spawn~
    CreateCreature("53SpiCra","",[-1.-1],0)  // ~Cradoldrider Spawn~
    CreateCreature("53SpiCra","",[-1.-1],0)  // ~Cradoldrider Spawn~
    CreateCreature("53SpiCra","",[-1.-1],0)  // ~Cradoldrider Spawn~
    ChunkCreature(Myself)
END

IF
  !TimerActive(73)
  RandomNumLT(99,20)
  Or(2)
    See([0.0.DROW],0)
    See(NearestEnemyOf(Myself),0)
  !CheckSpellState(LastSeenBy(Myself),WEB)
  !CheckSpellState(LastSeenBy(Myself),HELD)
THEN
  RESPONSE #100
    FaceObject(LastMarkedObject)
    PlaySequence(Myself,SHOOT)
    SetInterrupt(FALSE)
    Wait(1)
    ReallyForceSpell(LastMarkedObject,INNATE_DRIDER_WEB)
    StartTimer(73,6)
    SetInterrupt(TRUE)
END

IF
  Allegiance(Myself,ENEMY)
  !Global("Drider_Web_Weapon_Equiped","LOCALS",1)
  HaveSpell(CLERIC_DRAW_UPON_HOLY_MIGHT)
  SetLastMarkedObject(Myself)
  IsSpellTargetValid(Myself,CLERIC_DRAW_UPON_HOLY_MIGHT,0)
THEN
  RESPONSE #100
    Spell(Myself,CLERIC_DRAW_UPON_HOLY_MIGHT)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  !Global("Drider_Web_Weapon_Equiped","LOCALS",1)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("132514111304",LastMarkedObject,3)
      // CLERIC_UNHOLY_BLIGHT
      // CLERIC_PRODUCE_FIRE
      // CLERIC_GLYPH_OF_WARDING
    MarkSpellAndObject("1303",FarthestEnemyOf(Myself),0)
      // CLERIC_DISPEL_MAGIC
    MarkSpellAndObject("23061211",LastMarkedObject,3)
      // WIZARD_HOLD_PERSON
      // CLERIC_SILENCE_15_RADIUS
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

