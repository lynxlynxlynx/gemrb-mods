IF
  Global("TEAM_2","MYAREA",0)
  Global("SH_Drace_Allow","GLOBAL",0)
  !StateCheck(Player1,STATE_INVISIBLE)
  !StateCheck(Player1,STATE_IMPROVEDINVISIBILITY)
  !IsCreatureHiddenInShadows(Player1)
  IsOverMe(Player1)
THEN
  RESPONSE #100
    SetGlobal("TEAM_2","MYAREA",1)
END

