IF
  HPLostGT(Myself,9)
  HasItem("00potn04",Myself)  // ~Potion of Healing~
THEN
  RESPONSE #100
    UseItem("00potn04",Myself)  // ~Potion of Healing~
END

IF
  HPLostGT(Myself,18)
  HaveSpell(CLERIC_CURE_MODERATE_WOUNDS)
THEN
  RESPONSE #100
    Spell(Myself,CLERIC_CURE_MODERATE_WOUNDS)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  HPLostGT(Myself,18)
  HaveSpell(CLERIC_SANCTUARY)
THEN
  RESPONSE #100
    Spell(Myself,CLERIC_SANCTUARY)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Allegiance(Myself,ENEMY)
  !CheckSpellState(Myself,SANCTUARY)
  RandomNum(10,1)
  See([GOODCUTOFF],0)
THEN
  RESPONSE #100
    MarkSpellAndObject("1117111411022306",LastMarkedObject,7)
      // CLERIC_FROST_FINGERS
      // CLERIC_DOOM
      // CLERIC_COMMAND
      // WIZARD_HOLD_PERSON
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  Allegiance(Myself,ENEMY)
  !CheckSpellState(Myself,SANCTUARY)
  HaveSpell(CLERIC_SILENCE_15_RADIUS)
  See(FarthestEnemyOf(Myself),0)
  IsSpellTargetValid(LastMarkedObject,CLERIC_SILENCE_15_RADIUS,0)
  Or(2)
    Sequence(LastMarkedObject,CAST)
    Sequence(LastMarkedObject,CONJURE)
  Range(LastMarkedObject,9,GREATER_THAN)
THEN
  RESPONSE #100
    Spell(LastMarkedObject,CLERIC_SILENCE_15_RADIUS)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  ActionListEmpty()
  RandomNum(2,1)
  !CheckSpellState(Myself,SANCTUARY)
  See([ENEMY.MONSTER.GOLEM.255.0.0.0.0.255],0)
  HPLostGT(LastMarkedObject,12)
THEN
  RESPONSE #100
    SetBestWeapon(Myself,1)
    AttackOneRound(LastMarkedObject)
END

