IF
  Global("door","LOCALS",1)
THEN
  RESPONSE #100
    OpenDoor(Myself)
    Wait(5)
END

IF
  Opened([PC])
THEN
  RESPONSE #100
    GiveItemCreate("60Stele5",LastTrigger,1,0,0)  // ~Religious Stele~
    SetGlobal("door","LOCALS",1)
END

IF
  Global("door","LOCALS",0)
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    CloseDoor(Myself)
    Wait(5)
END

