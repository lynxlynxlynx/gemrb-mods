IF
  !Global("Captains_Team5_attacked","MYAREA",1)
  IsHeartOfFuryModeOn()
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("Captains_Team5_attacked","MYAREA",1)
    SetGlobalTimer("Captains_Team5_Timer","MYAREA",35)
    Continue()
END

IF
  !Global("Captains_Team5_attacked","MYAREA",1)
  CheckAreaDiffLevel(3)
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("Captains_Team5_attacked","MYAREA",1)
    SetGlobalTimer("Captains_Team5_Timer","MYAREA",35)
