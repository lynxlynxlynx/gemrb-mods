IF
  Global("Captains_Team5_attacked","MYAREA",1)
  GlobalTimerExpired("Captains_Team5_Timer","MYAREA")
  StateCheck(Myself,STATE_SILENCED)
  !TimerActive(0)
THEN
  RESPONSE #100
    FloatMessage(Myself,36665)  // ~"...!!"~
    StartTimer(0,4)
    Continue()
END

IF
  Global("Captains_Team5_attacked","MYAREA",1)
  GlobalTimerExpired("Captains_Team5_Timer","MYAREA")
  !StateCheck(Myself,STATE_SILENCED)
  !TimerActive(0)
THEN
  RESPONSE #100
    SetGlobal("Captains_Team5_attacked","MYAREA",2)
    FloatMessage(Myself,25014)  // ~"Rat unit!  Hawk unit!  Snake unit!  All units to arms!"~
    StartTimer(0,4)
    SetGlobal("TEAM_1","MYAREA",1)
    SetGlobal("TEAM_2","MYAREA",1)
    SetGlobal("TEAM_3","MYAREA",1)
    SetGlobal("TEAM_4","MYAREA",1)
    Continue()
END

