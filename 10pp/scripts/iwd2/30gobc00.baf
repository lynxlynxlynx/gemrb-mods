IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    MarkSpellAndObject("1102",LastMarkedObject,7)
      // CLERIC_COMMAND
    MarkSpellAndObject("1111",[PC],SPELLCAST_RANDOM)
      // CLERIC_BANE
    MarkSpellAndObject("2306",[PC],SPELLCAST_RANDOM)
      // WIZARD_HOLD_PERSON
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1102",LastMarkedObject,7)
      // CLERIC_COMMAND
    MarkSpellAndObject("1111",[PC],SPELLCAST_RANDOM)
      // CLERIC_BANE
    MarkSpellAndObject("2306",[PC],SPELLCAST_RANDOM)
      // WIZARD_HOLD_PERSON
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1111",[PC],SPELLCAST_RANDOM)
      // CLERIC_BANE
    MarkSpellAndObject("2306",[PC],SPELLCAST_RANDOM)
      // WIZARD_HOLD_PERSON
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    MarkSpellAndObject("1102",LastMarkedObject,7)
      // CLERIC_COMMAND
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2306",[PC],SPELLCAST_RANDOM)
      // WIZARD_HOLD_PERSON
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    MarkSpellAndObject("1102",LastMarkedObject,7)
      // CLERIC_COMMAND
    MarkSpellAndObject("1111",[PC],SPELLCAST_RANDOM)
      // CLERIC_BANE
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

