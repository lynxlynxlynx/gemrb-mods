IF
  Global("BLACKRAVEN_MONKS_DEAD","GLOBAL",0)
  !Global("AR5201_BLACKRAVEN_DEAD","GLOBAL",0)
  !Global("AR5202_BLACKRAVEN_DEAD","GLOBAL",0)
