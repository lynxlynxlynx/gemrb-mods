IF
  Global("DRUM_3_STATE","MYAREA",0)
  !Dead("DRUM_3")  // 
  Or(3)
    !Global("TEAM_15","MYAREA",0)
    See(NearestEnemyOf(Myself),0)
    AttackedBy([PC],0)
THEN
  RESPONSE #100
    SetGlobal("DRUM_3_STATE","MYAREA",1)
    FloatMessage(Myself,470)  // ~"Kill!  Sound drum and kill!"~
    SetGlobal("I_PLAY_DRUMS","LOCALS",1)
    SetCreatureAreaFlag(Myself,IGNORE_RETURN_TO_START_POS,TRUE)
    ChangeCurrentScript("")
END

