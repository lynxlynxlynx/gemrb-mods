IF
  !TimerActive(21)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    FloatMessage(Myself,37677)  // ~"Guards!!  Guards!!"~
    StartRandomTimer(21,5,10)
    Continue()
END

IF
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("TEAM_1","MYAREA",1)
    RunAwayFrom(LastMarkedObject,45)
END

