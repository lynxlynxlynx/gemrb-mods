THEN
  RESPONSE #100
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  HasItem("SLiving",Myself)  // ~Slay Living~
  Internal(Myself,0,0)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetInternal(Myself,0,1)
    AttackOneRound(LastMarkedObject)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Internal(Myself,0,0)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("2501111115032306",LastMarkedObject,7)
      // WIZARD_ANIMATE_DEAD
      // CLERIC_BANE
      // CLERIC_FLAME_STRIKE
      // WIZARD_HOLD_PERSON
    MarkSpellAndObject("1203140912151515",Myself,7)
      // CLERIC_CHANT
      // CLERIC_CLOAK_OF_FEAR
      // CLERIC_DRAW_UPON_HOLY_MIGHT
      // CLERIC_SLAY_LIVING
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1203140912151515",Myself,7)
      // CLERIC_CHANT
      // CLERIC_CLOAK_OF_FEAR
      // CLERIC_DRAW_UPON_HOLY_MIGHT
      // CLERIC_SLAY_LIVING
    MarkSpellAndObject("2501111115032306",LastMarkedObject,7)
