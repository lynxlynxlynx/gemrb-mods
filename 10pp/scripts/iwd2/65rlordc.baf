IF
  InternalGT(Myself,0,2)
THEN
  RESPONSE #100
    SetInternal(Myself,0,0)
    Continue()
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  HPPercentLT(Myself,25)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    MarkSpellAndObject("16071502",Myself,SPELLCAST_IGNORE_SEE)
      // CLERIC_HEAL
      // CLERIC_CURE_CRITICAL_WOUNDS
    Continue()
END

