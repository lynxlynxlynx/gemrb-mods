IF
  Global("AWAKE","LOCALS",0)
  !Global("TEAM_2","MYAREA",0)
THEN
  RESPONSE #100
    PlaySequence(Myself,AWAKE)
    SetGlobal("AWAKE","LOCALS",1)
    Wait(2)
    FaceObject(NearestPC)
    Continue()
END

IF
  !Global("AWAKE","LOCALS",0)
THEN
