END

IF
  !TimerActive(18)
  Global("AWAKE","LOCALS",0)
THEN
  RESPONSE #100
    FloatMessage(Myself,8586)  // ~"Zzznnzzn..."~
    StartRandomTimer(18,3,5)
  RESPONSE #100
    FloatMessage(Myself,1015)  // ~"Zzzzzzz..."~
    StartRandomTimer(18,3,5)
END

