IF
  Global("WATCHING_PLAYER","MYAREA",0)
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    SetCreatureAreaFlag(Myself,IGNORE_AI_INHIBIT,TRUE)
    SpellHitEffectSprite(Myself,Myself,DEATH_SPELL,10)
    Wait(1)
    DestroySelf()
END

IF
  Global("WATCHING_PLAYER","MYAREA",0)
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    DestroySelf()
END

