IF
  Global("DID_SPIN","LOCALS",0)
  Or(5)
    See("04_50HNT_01",0)  // 04_50HNT_01
    See("04_50HNT_02",0)  // 04_50HNT_02
    See("04_50HNT2_03",0)  // 04_50HNT2_03
    See("04_50HNT2_04",0)  // 04_50HNT2_04
    See("04_50HNT3_05",0)  // 04_50HNT3_05
THEN
  RESPONSE #100
    FaceObject(LastSeenBy(Myself))
    Wait(1)
    SetGlobal("SPIN","LOCALS",3)
  RESPONSE #100
    FaceObject(LastSeenBy(Myself))
    Wait(1)
    SetGlobal("SPIN","LOCALS",-3)
  RESPONSE #25
    FaceObject(LastSeenBy(Myself))
    Wait(1)
    SetGlobal("DID_SPIN","LOCALS",1)
    FloatMessage(Myself,17906)  // ~"Fine... just ignore me, ya buncha' *dung worms!*"~
    Wait(1)
    SetGlobal("SPINNING_INSULT","MYAREA",1)
END

