    SetGlobal("SPIN","LOCALS",0)
    SetGlobal("DID_SPIN","LOCALS",1)
    FloatMessage(Myself,17894)  // ~"Oer... I don't feel so..."~
    TurnAMT(-1)
    TurnAMT(-1)
    TurnAMT(-1)
