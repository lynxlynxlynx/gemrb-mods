    SetGlobal("StartCutscene_63cFB06","MYAREA",1)
    FaceObject(NearestPC)
    PlaySequence(Myself,ATTACK_BACKSLASH)
    Wait(1)
    PlaySequence(Myself,ATTACK_BACKSLASH)
    Wait(1)
    PlaySequence(Myself,ATTACK_BACKSLASH)
    Wait(1)
    PlaySequence(Myself,DIE)
