IF
  Global("60PEDES4_Take_Stele","MYAREA",0)
  PartyHasItem("60Stele4")  // ~Religious Stele~
  OpenState("AR6050_IntPillar4",FALSE)  // AR6050_IntPillar4
THEN
  RESPONSE #100
    SetGlobal("60PEDES4_Take_Stele","MYAREA",1)
    TakePartyItem("60Stele4")
    IncrementGlobal("Chult_Pedestals","GLOBAL",1)
    Unlock(Myself)
    CloseDoor(Myself)
END

IF
  Clicked([PC])
THEN
  RESPONSE #100
END

