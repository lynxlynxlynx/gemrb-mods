IF
  GlobalTimerNotExpired("PrismFireDelay","MYAREA")
THEN
  RESPONSE #100
    NoAction()
END

IF
  Global("41PrismTarget","MYAREA",1)
THEN
  RESPONSE #100
    ForceSpellPoint([913.326],2092)
    SetGlobalTimer("PrismFireDelay","MYAREA",3)
    TriggerActivation("Mirror8",TRUE)
    TriggerActivation(Myself,FALSE)
END

