IF
  !TimerActive(50)
  LOS([PC],28)
THEN
  RESPONSE #100
    StartTimer(50,1)
    SpellHitEffectSprite(Myself,Myself,CLOUDBURST,0)
    Continue()
END

IF
  !TimerActive(51)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    ReallyForceSpell(LastSeenBy(Myself),WIZARD_LIGHTNING_BOLT)
    Wait(1)
    StartTimer(51,6)
END

