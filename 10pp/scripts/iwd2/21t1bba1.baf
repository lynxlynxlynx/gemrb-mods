IF
  !Global("Captains_Team1_attacked","MYAREA",1)
  IsHeartOfFuryModeOn()
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("Captains_Team1_attacked","MYAREA",1)
    SetGlobalTimer("Captains_Team1_Timer","MYAREA",35)
    Continue()
END

