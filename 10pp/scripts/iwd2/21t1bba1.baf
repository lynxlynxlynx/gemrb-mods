IF
  Global("Captains_Team1_attacked","MYAREA",1)
  GlobalTimerExpired("Captains_Team1_Timer","MYAREA")
  StateCheck(Myself,STATE_SILENCED)
  !TimerActive(0)
THEN
  RESPONSE #100
    FloatMessage(Myself,36665)  // ~"...!!"~
    StartTimer(0,4)
    Continue()
END

