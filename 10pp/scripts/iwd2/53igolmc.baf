IF
  See([GOODCUTOFF.0.0.0.0.255],0)
THEN
  RESPONSE #100
    Continue()
END

IF
  !TargetUnreachable(LastSeenBy(Myself))
  See([GOODCUTOFF.0.0.0.0.255],0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

