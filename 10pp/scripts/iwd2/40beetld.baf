IF
  Global("AR4000_VISITED","GLOBAL",0)
  !TimerActive(100)
  StateCheck(Player1,STATE_SLEEPING)
  InWeaponRange(Player1)
THEN
  RESPONSE #10
    FaceObject(Player1)
    ApplySpell(Player1,TRAP_ARROW)
    StartRandomTimer(100,5,10)
  RESPONSE #90
    FaceObject(Player1)
    ChangeEnemyAlly(Myself,NEUTRAL)
    PickPockets(Player1)
    Enemy()
    StartRandomTimer(100,5,10)
END

