IF
  HaveSpell(CLERIC_INVISIBILITY_PURGE)
  Global("PreAction","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("PreAction","LOCALS",1)
    Spell(Myself,CLERIC_INVISIBILITY_PURGE)
    SpellWait(CLERIC_INVISIBILITY_PURGE)
END

IF
  HaveSpell(WIZARD_DIMENSION_DOOR)
  Global("PreAction","LOCALS",1)
  Exists(LastMarkedObject)
THEN
  RESPONSE #100
    SetGlobal("PreAction","LOCALS",2)
    SetGlobal("MarkedObject","LOCALS",0)
    Spell(LastMarkedObject,WIZARD_DIMENSION_DOOR)
    SpellWait(WIZARD_DIMENSION_DOOR)
END

IF
  GlobalLT("Action","LOCALS",2)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    IncrementGlobal("Action","LOCALS",1)
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("24202104",LastMarkedObject,7)
      // WIZARD_EMOTION_FEAR
      // WIZARD_CHARM_PERSON
    MarkSpellAndObject("2519",Myself,7)
      // WIZARD_SUNFIRE
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2519",Myself,7)
      // WIZARD_SUNFIRE
    MarkSpellAndObject("24202104",LastMarkedObject,7)
      // WIZARD_EMOTION_FEAR
      // WIZARD_CHARM_PERSON
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    SetGlobal("PreAction","LOCALS",0)
    SetGlobal("Action","LOCALS",0)
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

