IF
  IsCreatureAreaFlag(Myself,HAS_SEEN_PARTY)
  !NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    SetCreatureAreaFlag(Myself,HAS_SEEN_PARTY,FALSE)
END

IF
  Global("30Yquog_Dead","GLOBAL",1)
THEN
  RESPONSE #100
    DestroySelf()
END

