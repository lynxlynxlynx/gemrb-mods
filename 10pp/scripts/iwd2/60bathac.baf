    ForceSpellPoint([2760.1802],TRAP_ACID_BATH)
    ForceSpellPoint([2760.1802],TRAP_ACID_BATH)
    Wait(7)
    IncrementGlobal("Acid_Room_Active","MYAREA",-1)
