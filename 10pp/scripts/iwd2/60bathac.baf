    ForceSpellPoint([2469.1931],TRAP_ACID_BATH)
    ForceSpellPoint([2504.2026],TRAP_ACID_BATH)
    ForceSpellPoint([2506.1769],TRAP_ACID_BATH)
    ForceSpellPoint([2544.1842],TRAP_ACID_BATH)
    ForceSpellPoint([2549.1935],TRAP_ACID_BATH)
    ForceSpellPoint([2578.2049],TRAP_ACID_BATH)
    ForceSpellPoint([2583.1741],TRAP_ACID_BATH)
    ForceSpellPoint([2630.1860],TRAP_ACID_BATH)
    ForceSpellPoint([2641.1946],TRAP_ACID_BATH)
    ForceSpellPoint([2654.1775],TRAP_ACID_BATH)
