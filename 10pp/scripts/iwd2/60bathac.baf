IF
  Global("Acid_Room_Armed","MYAREA",0)
  Global("Acid_Room_Active","MYAREA",0)
  IsOverMe([ANYONE])
THEN
  RESPONSE #100
    Wait(3)
    SetGlobal("Acid_Room_Active","MYAREA",11)
END

