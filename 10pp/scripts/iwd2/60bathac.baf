IF
  !Global("Acid_Room_Armed","MYAREA",0)
  Or(2)
    CheckDoorFlags("AR6051_Acid_Art",DOOROPEN)  // AR6051_Acid_Art
    CheckDoorFlags("AR6051_Acid_Switch",DOOROPEN)  // AR6051_Acid_Switch
THEN
  RESPONSE #100
    CloseDoor("AR6051_Acid_Art")
    CloseDoor("AR6051_Acid_Switch")
END

IF
  Global("Acid_Room_Armed","MYAREA",0)
  Global("Acid_Room_Active","MYAREA",1)
THEN
  RESPONSE #100
    SetGlobal("Acid_Room_Active","MYAREA",0)
    CloseDoor("AR6051_Acid_Art")
    CloseDoor("AR6051_Acid_Switch")
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
    Wait(7)
END

