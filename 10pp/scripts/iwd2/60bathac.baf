  Global("Acid_Room_Armed","MYAREA",0)
  GlobalGT("Acid_Room_Active","MYAREA",1)
THEN
  RESPONSE #100
    OpenDoor("AR6051_Acid_Art")
    OpenDoor("AR6051_Acid_Switch")
    ForceSpellPoint([2350.1960],TRAP_ACID_BATH)
