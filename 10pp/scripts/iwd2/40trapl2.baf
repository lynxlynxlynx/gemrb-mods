IF
  Or(2)
    Entered([PC])
    Disarmed([PC])
  !Global("40YurstTraps","GLOBAL",0)
THEN
  RESPONSE #100
    AddXPVar("Level_1_Average",813)  // ~You removed one of the traps set by the Aurilite rangers.~
    IncrementGlobal("TrapRemovalCount","MYAREA",1)
    Continue()
END

IF
  Or(2)
    Entered([PC])
    Disarmed([PC])
  Global("40YurstTraps","GLOBAL",0)
THEN
  RESPONSE #100
    AddXPVar("Level_1_Average",34095)  // ~You removed a trap that was placed here.~
    IncrementGlobal("TrapRemovalCount","MYAREA",1)
    Continue()
END

IF
  Disarmed([PC])
  See([0.HUMANOID],0)
  Specifics(LastMarkedObject,255)
  LOS(LastMarkedObject,100)
  !StateCheck(LastTrigger,STATE_INVISIBLE)
  !StateCheck(LastTrigger,STATE_IMPROVEDINVISIBILITY)
THEN
  RESPONSE #100
    SetGlobal("TEAM_2","MYAREA",1)
    Continue()
END

IF
  Entered([PC])
THEN
  RESPONSE #100
    DisplayMessage(14381)  // ~Trap Sprung~ [AMB_D05C]
    ReallyForceSpell(LastTrigger,CLERIC_CONTAGION)
    ChangeCurrentScript("")
    TriggerActivation(Myself,FALSE)
END

IF
  Disarmed([PC])
THEN
  RESPONSE #100
    ChangeCurrentScript("")
    TriggerActivation(Myself,FALSE)
END

