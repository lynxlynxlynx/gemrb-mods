IF
  !Global("PREFER_PC","LOCALS",0)
  !See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",0)
    Continue()
END

IF
  Global("PREFER_PC","LOCALS",0)
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",1)
    Continue()
END

IF
  Global("PREFER_PC","LOCALS",0)
  Or(8)
    See([0.0.BUGBEAR],0)
    See([0.0.GOBLIN],0)
    See([0.0.WOLF],0)
    See([0.0.ORC],0)
    AttackedBy([0.0.BUGBEAR],0)
    AttackedBy([0.0.GOBLIN],0)
    AttackedBy([0.0.WOLF],0)
    AttackedBy([0.0.ORC],0)
THEN
  RESPONSE #100
    Shout(77)
    EquipWeapon()
    Attack(LastMarkedObject)
END

IF
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",1)
    Shout(77)
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

IF
  Global("PREFER_PC","LOCALS",0)
  Heard([ANYONE],66)
  See(LastHeardBy(Myself),0)
THEN
  RESPONSE #100
    AttackOneRound(LastSeenBy(Myself))
END

