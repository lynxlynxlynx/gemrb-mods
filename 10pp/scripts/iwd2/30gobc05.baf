      // WIZARD_CHARM_PERSON
    Continue()
  RESPONSE #100
    MarkSpellAndObject("2112",[PC],SPELLCAST_RANDOM)
      // WIZARD_MAGIC_MISSILE
    MarkSpellAndObject("21122217",NearestEnemyOf(Myself),SPELLCAST_RANDOM)
      // WIZARD_MAGIC_MISSILE
      // WIZARD_AGANNAZAR_SCORCHER
