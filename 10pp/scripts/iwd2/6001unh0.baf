IF
  CreatureHidden(Myself)
  Global("6001_Dead_BattleGroup_HalfDead","MYAREA",1)
THEN
  RESPONSE #100
    Enemy()
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    ChangeCurrentScript("")
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

